{
  "name": "electron-react-app",
  "version": "1.0.0",
  "description": "Cross platform desktop app built using Electron and React.",
  "main": "main.js",
  "repository": "https://github.com/skb1129/electron-react-app",
  "author": "Surya Kant Bansal <suryakantbansal97@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "webpack",
    "start:renderer": "webpack-dev-server --env.development",
    "start:main": "NODE_ENV=development electron .",
    "prestart": "yarn build",
    "start": "NODE_ENV=production electron .",
    "package:mac": "yarn build && electron-builder build --mac"
  },
  "build": {
    "productName": "ElectronReact",
    "appId": "com.electron.ElectronReact",
    "files": [
      "build/",
      "main.js",
      "preload.js"
    ]
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "html-webpack-plugin": "^4.3.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
