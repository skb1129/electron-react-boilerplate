{
  "name": "electron-react-boilerplate",
  "version": "1.2.0",
  "description": "Cross platform desktop app built using Electron and React.",
  "main": "main.js",
  "repository": "https://github.com/skb1129/electron-react-app",
  "author": "Surya Kant Bansal <suryakantbansal97@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "webpack",
    "start:renderer": "webpack-dev-server --env.development",
    "start:main": "NODE_ENV=development electron .",
    "prestart": "yarn build",
    "start": "NODE_ENV=production electron .",
    "package:macos": "yarn build && electron-builder build --macos",
    "package:windows": "yarn build && electron-builder build --windows",
    "package:linux": "yarn build && electron-builder build --linux",
    "package": "yarn build && electron-builder build --mwl"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.2",
    "electron": "^10.1.0",
    "electron-builder": "^22.8.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.11.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.1",
    "react-hot-loader": "^4.12.21",
    "sass-loader": "^10.0.1",
    "style-loader": "^1.2.1",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
