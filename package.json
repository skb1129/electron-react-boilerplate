{
  "name": "electron-react-boilerplate",
  "version": "2.1.0",
  "description": "Cross platform desktop app built using Electron and React.",
  "main": "build/main.js",
  "repository": "https://github.com/skb1129/electron-react-app",
  "author": "Surya Kant Bansal <suryakantbansal97@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "webpack",
    "compile": "tsc --project tsconfig.build.json",
    "start:renderer": "webpack serve --env development",
    "start:main": "yarn compile && NODE_ENV=development electron .",
    "prestart": "yarn build && yarn compile",
    "start": "NODE_ENV=production electron .",
    "package:macos": "yarn prestart && electron-builder build --macos",
    "package:windows": "yarn prestart && electron-builder build --windows",
    "package:linux": "yarn prestart && electron-builder build --linux",
    "package": "yarn prestart && electron-builder build --mwl"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@hot-loader/react-dom": "^17.0.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-hot-loader": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.6",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "eslint": "^7.27.0",
    "eslint-plugin-react": "^7.24.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^7.0.0",
    "prettier": "^2.3.0",
    "react-hot-loader": "^4.13.0",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.3.2",
    "typescript-plugin-css-modules": "^3.3.0",
    "webpack": "^5.38.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  }
}
